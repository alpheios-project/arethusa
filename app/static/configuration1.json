{
  "state" : {
    "retriever" : "tokenRetriever"
  },

  "MainCtrl" : {
    "template"  : "templates/main2.html",
    "plugins" : {
      "text" : {
        "name" : "text",
        "main" : true,
        "template"  : "templates/text.html"
      },

      "history" : {
        "name" : "history",
        "main" : true,
        "listener" : true,
        "maxSize" : 5,
        "template" : "templates/history.html"
      },

      "external_history" : {
        "name" : "external_history",
        "main" : true,
        "listener" : true,
        "external" : true,
        "template" : "templates/external_history.html"
      },

      "morph" : {
        "name" : "morph",
        "retriever" : "morphRetriever",
        "template"  : "templates/morph2.html",
        "attributes" : {
          "pos" : {
            "long" : "Part of Speech",
            "short" : "pos",
            "values" : {
              "noun" : {
                "long" : "noun",
                "short" : "noun"
              },
              "verb" : {
                "long" : "verb",
                "short" : "verb"
              },
              "punct" : {
                "long" : "punctuation",
                "short" : "punct"
              }
            }
          },
          "casus" : {
            "long" : "Case",
            "short" : "casus",
            "values" : {
              "1" : {
                "long" : "nominative",
                "short" : "nom"
              },
              "2" : {
                "long" : "genitive",
                "short" : "gen"
              },
              "3" : {
                "long" : "dative",
                "short" : "dat"
              },
              "4" : {
                "long" : "accusative",
                "short" : "acc"
              },
              "5" : {
                "long" : "vocative",
                "short" : "voc"
              },
              "6" : {
                "long" : "ablative",
                "short" : "abl"
              }
            }
          }
        }
      },

      "comment" : {
        "name" : "comment",
        "template" : "templates/comment2.html"
      }
    }
  }
}
